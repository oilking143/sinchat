<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/main_color_dark</item>
        <item name="colorControlActivated">@color/main_color_dark</item>
    </style>

    <style name="MyTablayoutstyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@android:color/white</item>
        <item name="tabIndicatorColor">@color/main_color_dark</item>
        <item name="tabIndicatorHeight">20dp</item>
        <item name="tabSelectedTextColor">@color/text_black</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/text_while</item>
    </style>

    <style name="popup_anim_bottom">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_show</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_hide</item>
    </style>

    <style name="account_info_1">
        <item name="android:textSize">@dimen/account_gray_textSize</item>
        <item name="android:textColor">@color/account_gray_text</item>
    </style>
    <style name="account_info_2">
        <item name="android:textSize">@dimen/account_name_textSize</item>
        <item name="android:textColor">@color/account_gray_text</item>
    </style>
    <style name="account_info_3">
        <item name="android:textSize">@dimen/account_name_textSize</item>
        <item name="android:textColor">@color/account_gray_light_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Design.Tab.Custom" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyDialog" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="dialog_btn">
        <item name="android:width">@dimen/dialog_btn_width</item>
        <item name="android:height">@dimen/dialog_btn_height</item>
        <item name="android:textSize">@dimen/dialog_btn_textSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="popup_chat_item_text">
        <item name="android:paddingStart">@dimen/popup_chat_more_text_paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/popup_chat_more_text_paddingHorizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/popup_chat_more_textSize</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

</resources>
